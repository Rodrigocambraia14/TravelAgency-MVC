@model Usuario
@{
    ViewData["Title"] = "CadastroUser";
}
<div class="Container">
<form method="POST" asp-action="CadastroUser">
    <fieldset>
        
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <legend><h2>Cadastro de Usuário</h2></legend>
            <label  asp-for="Nome">Nome:</label>
            <input  asp-for="Nome" class="form-control " placeholder="Nome do usuário">
          </div>
        </div>

        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Login">Login:</label>
            <input  asp-for="Login" class="form-control " placeholder="Login de usuário">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Senha">Senha:</label>
            <input  asp-for="Senha" class="form-control " placeholder="Senha">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  class="label1" asp-for="DataNascimento">Data de nascimento:</label>
            <input  asp-for="DataNascimento" type="date" class="form-control " >
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <input  type="submit"  value="Cadastrar" class="btn btn-primary">
          </div>
        </div>
    </fieldset>
</form>
</div>


<div class="mensagem">
    @ViewBag.Mensagem
</div>