@using UC4_ATV2.Models;
@model IEnumerable<PacoteTuristico>
@{
    ViewData["Title"] = "ListaPacote";
}

<table>
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Origem</th>
        <th>Destino</th>
        <th>Atrativos</th>
        <th>Saída</th>
        <th>Retorno</th>
        <th>Usuário</th>
        <th>Função</th>
    </thead>
    @foreach(PacoteTuristico p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Nome</td>
            <td>@p.Origem</td>
            <td>@p.Destino</td>
            <td>@p.Atrativos</td>
            <td>@p.Saida.ToString("dd/MM/yyyy")</td>
            <td>@p.Retorno.ToString("dd/MM/yyyy")</td>
            <td>@p.Usuario</td>
            <td>
                <a class="edit" href="/Pacote/EditarPacote?Id=@p.Id">Editar</a>
                <a class="edit" href="/Pacote/Remover?Id=@p.Id">Remover</a>
            </td>
        </tr>
    }


</table>