@model PacoteTuristico
@{
    ViewData["Title"] = "CadastroPacote";
}



<div class="Container">
<form method="POST" asp-action="CadastroPacote">
    <fieldset>
        
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <legend><h2>Cadastro de Pacotes de viagem</h2></legend>
            <label  asp-for="Nome">Nome:</label>
            <input  asp-for="Nome" type="Text" class="form-control " placeholder="Nome da viagem">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Origem">Origem:</label>
            <input  asp-for="Origem" type="Text" class="form-control " placeholder="Origem">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Destino">Destino:</label>
            <input  asp-for="Destino" type="Text" class="form-control " placeholder="Destino da viagem">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Atrativos">Atrativos:</label>
            <input  asp-for="Atrativos" type="Text" class="form-control " placeholder="Atrativos do local">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Saida">Saída:</label>
            <input  asp-for="Saida" type="Date" class="form-control " placeholder="Data de saída">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Retorno">Retorno:</label>
            <input  asp-for="Retorno" type="Date" class="form-control " placeholder="Data de retorno">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Usuario">Usuário:</label>
            <input  asp-for="Usuario" type="Number" class="form-control " placeholder="Id de usuário">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <input  type="submit" value="Cadastrar Pacote" class="btn btn-primary">
          </div>
        </div>
    </fieldset>
</form>
</div>

<p>
    @ViewBag.Mensagem
</p>