@model PacoteTuristico
@{
    ViewData["Title"] = "EditarPacote";
}
<div class="Container">
<form method="POST" asp-action="EditarPacote">
    <fieldset>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Nome">Nome:</label>
            <input  asp-for="Nome" type="text" class="form-control " placeholder="Novo nome">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Origem">Origem:</label>
            <input  asp-for="Origem" type="Text" class="form-control " placeholder="Nova origem da viagem">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Destino">Destino:</label>
            <input  asp-for="Destino" type="Text" class="form-control " placeholder="Novo destino da viagem">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Atrativos">Atrativos:</label>
            <input  asp-for="Atrativos" type="Text" class="form-control " placeholder="Atrativos do local">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Saida">Saída:</label>
            <input  asp-for="Saida" type="Date" class="form-control " placeholder="Nova data de saída">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Retorno">Retorno:</label>
            <input  asp-for="Retorno" type="Date" class="form-control " placeholder="Nova data de retorno">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <label  asp-for="Usuario">Usuário:</label>
            <input  asp-for="Usuario" type="Number" class="form-control " placeholder="ID de usuário">
          </div>
        </div>
        <div class="form group">
          <div class="   col-md-6 offset-md-3">
            <input  type="submit" value="Editar" class="btn btn-primary">
          </div>
        </div>
    </fieldset>
</form>
</div>


<p>
    @ViewBag.Mensagem
</p>