 @model IEnumerable<PacoteTuristico>

@{
    ViewData["Title"] = "Home";
}
    
<h3>Pacotes Turísticos</h3>
<table>
    <thead>
        <tr>
            <strong><th>Nome</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Atrativos</th>
            <th>Saída</th>
            <th>Retorno</th></strong>
        <tr>
    </thead>
    <tbody>
        @foreach (PacoteTuristico p in Model)
        {
            <tr>               
                <td>@p.Nome</td>
                <td>@p.Origem</td>
                <td>@p.Destino</td>
                <td>@p.Atrativos</td>
                <td>@p.Saida.ToString("dd/MM/yyyy")</td>
                <td>@p.Retorno.ToString("dd/MM/yyyy")</td>  
            </tr>
        }
    </tbody>
</table>
